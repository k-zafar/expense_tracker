<h1>Listing expenses</h1>
 
<%= link_to 'Add New Expense', new_expense_path %>

<table class="table-bordered">
  <tr>
    <th>Amount</th>
    <th>Description</th>
    <th>Expense Type</th>
    <th>User</th>
    <th >Action</th>
  </tr>
 
  <% @expenses.each do |expense| %>
    <tr>
      <td><%= expense.amount %></td>
      <td><%= expense.description %></td>
      <td>
        <% if !expense.category_id.nil? %>
        <%= Category.find(expense.category_id).cat_name %>
        <% end %>
      </td>
      <td><%= expense.user %></td>
      <td>
        <%= link_to 'Show', expense_path(expense) %>
        <%= link_to 'Edit', edit_expense_path(expense) %>
        <%= link_to 'Destroy', expense_path(expense),
              method: :delete,
              data: { confirm: 'Are you sure?' } %>
              
      </td>
    </tr>
  <% end %>
</table>